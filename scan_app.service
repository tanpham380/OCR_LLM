[Unit]
Description=Uvicorn instance to serve Scan_app
After=network.target

[Service]
User=gitlab
Group=gitlab
WorkingDirectory=/home/gitlab/OCR
Environment="PATH=/home/gitlab/miniconda3/envs/ocr/bin"
ExecStart=/home/gitlab/miniconda3/envs/ocr/bin/uvicorn main:scan_app --host 0.0.0.0 --port 5001
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
